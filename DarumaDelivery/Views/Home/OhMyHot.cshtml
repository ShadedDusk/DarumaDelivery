<h1>Oh My Hot! Ramen</h1>

<div>
    <form>
        <h4>Protein</h4>
        <input type="radio" id="pork" name="protein_type" value="Pork"><label for="pork">Pork Chashu</label>
        <input type="radio" id="chicken" name="protein_type" value="Chicken"><label for="chicken">Chicken Chashu</label>
        <input type="radio" id="tofu" name="protein_type" value="Tofu"><label for="tofu">Tofu</label>
        <input type="radio" id="none" name="protein_type" value="None"><label for="none">None</label>
    </form>
</div>
<div>
    <form>
        <h4>Extra Protein</h4>
        <input type="checkbox" id="expork" name="exprotein_type" value="exPork"><label for="expork">+40g Pork Chashu[+$5.00]</label>
        <input type="checkbox" id="exchicken" name="exprotein_type" value="exChicken"><label for="exchicken">+40g Chicken Chashu[+$5.00]</label>
        <input type="checkbox" id="extofu" name="exprotein_type" value="exTofu"><label for="extofu">+9pc Tofu[+$5.00]</label>
        <input type="checkbox" id="exnone" name="exprotein_type" value="exNone"><label for="exnone">None</label>
    </form>
</div>
<div>
    <form>
        <h4>Spice Level</h4>
        <input type="radio" id="nspicy" name="spicelvl" value="Nspicy"><label for="nspice"> Non-Spicy</></label>
        <input type="radio" id="mild" name="spicelvl" value="Mild"><label for="mild">Mild</label>
        <input type="radio" id="med" name="spicelvl" value="Med"><label for="med">Medium</label>
        <input type="radio" id="hot" name="spicelvl" value="Hot"><label for="hot">Hot</label>
        <input type="radio" id="xhot" name="spicelvl" value="Xhot"><label for="xhot">Extra Hot!</label>
        <input type="radio" id="xxhot" name="spicelvl" value="Xxhot"><label for="xxhot">Extra Extra Hot!!!</label>
    </form>
</div>
<div>
    <form>
        <h2>Spice Type</h2>
        <input type="radio" id="spicem" name="spicetype" value="Spicem"><label for="spicem"> Mix</label>
        <input type="radio" id="spiceo" name="spicetype" value="Spiceo"><label for="spiceo">Spicy Oil</label>
    </form>
</div>
<div>
    <form>
        <h2>Remove?</h2>
        <input type="checkbox" id="greens" name="remove" value="Greens"><label for="greens">Roquette(Greens)</label>
        <input type="checkbox" id="seaweed" name="remove" value="Seaweed"><label for="seaweed">Seaweed</label>
    </form>
    <p><a asp-controller="Home" asp-action="Checkout"> <button>Purchase</button></a></p>
</div>

