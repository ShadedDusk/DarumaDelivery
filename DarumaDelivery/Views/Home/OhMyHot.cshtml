<h1>Signature Tonkotsu Chashu</h1>
<img src="~/lib/" />

    <div>
        <form>
        <h4>Protein</h4>
            <input type="radio" id="pork" name="protein_type" value="Pork"><label for="pork">Pork Chashu</label><br>
        <input type="radio" id="chicken" name="protein_type" value="Chicken"><label for="chicken">Chicken Chashu</label><br>
        <input type="radio" id="tofu" name="protein_type" value="Tofu"><label for="tofu">Tofu</label>
        <input type="radio" id="none" name="protein_type" value="None"><label for="none">None</label>
        </form>
    </div>
    <div>
    <form>
        <h4>Extra Protein</h4>
        <input type="checkbox" id="expork" name="exprotein_type" value="exPork"><label for="expork">+40g Pork Chashu[+$5.00]</label><br>
        <input type="checkbox" id="exchicken" name="exprotein_type" value="exChicken"><label for="exchicken">+40g Chicken Chashu[+$5.00]</label><br>
        <input type="checkbox" id="extofu" name="exprotein_type" value="exTofu"><label for="tofu">+9pc Tofu[]</label>
        <input type="checkbox" id="exnone" name="exprotein_type" value="exNone"><label for="none">None</label>
    </form>
    </div>
    <div >
        <h4>Spice Level</h4>
        <input type="radio">Non-Spicy</>
        <input type="radio">Mild</>
        <input type="radio">Medium</>
        <input type="radio">Hot</>
        <input type="radio">Extra Hot!</>
        <input type="radio">Extra Extra Hot!!!</>
    </div>
    <div>
        <h2>Spice Type</h2>
        <input type="radio">Spicy Mix</>
        <input type="radio">Spicy Oil</>
    </div>
    <div>
        <h2>Remove?</h2>
        <input type="checkbox">Kikurage(Fungus)</>
        <input type="checkbox">Roquette(Greens)</>
        <input type="checkbox">Sesame seeds</>
    </div>

